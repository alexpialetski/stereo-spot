{
  "name": "stereo-spot",
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "root": ".",
  "sourceRoot": ".",
  "targets": {
    "update-hf-token": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python3 scripts/update_hf_token.py",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "cache": false,
      "dependsOn": ["install-deps"]
    },
    "update-ytdlp-cookies": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python3 scripts/update_ytdlp_cookies.py",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "cache": false,
      "dependsOn": ["install-deps"]
    },
    "update-alb-certificates": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python3 scripts/update_alb_certs.py",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "cache": false,
      "dependsOn": ["install-deps"]
    },
    "install-deps": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pip install -q -e \"scripts\" -e \"packages/shared-types[dev]\" -e \"packages/aws-adapters[dev]\" -e \"packages/adapters[dev]\" -e \"packages/web-ui[dev]\" -e \"packages/media-worker[dev]\" -e \"packages/video-worker[dev]\" -e \"packages/integration[dev]\" -q",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "cache": true
    }
  }
}
