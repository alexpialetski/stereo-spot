{
  "name": "stereo-inference",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/stereo-inference",
  "targets":{"test":{"executor":"nx:run-commands","options":{"command":"pip install pytest -q && pytest -v","cwd":"{projectRoot}"},"configurations":{}},"lint":{"executor":"nx:run-commands","options":{"command":"ruff check . tests","cwd":"{projectRoot}"},"configurations":{}},
    "sagemaker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": ". packages/aws-infra/.env && aws codebuild start-build --project-name \"${CODEBUILD_PROJECT_NAME}\" --region \"${REGION}\"",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "dependsOn": ["aws-infra:terraform-output"],
      "inputs": ["default", "{workspaceRoot}/packages/aws-infra/.env"]
    },
    "sagemaker-deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash packages/stereo-inference/scripts/deploy-sagemaker.sh packages/aws-infra/.env",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "dependsOn": ["aws-infra:terraform-output"],
      "inputs": ["default", "{workspaceRoot}/packages/aws-infra/.env"]
    }
  }
}
