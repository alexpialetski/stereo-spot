{
  "name": "stereo-inference",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/stereo-inference",
  "implicitDependencies": [
    "shared-types",
    "aws-adapters",
    "adapters"
  ],
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pip install pytest -q && pytest -v",
        "cwd": "{projectRoot}"
      },
      "configurations": {},
      "dependsOn": [
        "stereo-spot:install-deps"
      ]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ruff check . tests",
        "cwd": "{projectRoot}"
      },
      "configurations": {},
      "dependsOn": [
        "stereo-spot:install-deps"
      ]
    },
    "inference-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "PLATFORM=${PLATFORM:-aws} python scripts/inference_build.py",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {
        "no-cache": {
          "command": "PLATFORM=${PLATFORM:-aws} python scripts/inference_build.py --no-cache",
          "cwd": "{workspaceRoot}"
        }
      },
      "dependsOn": [
        "aws-infra:terraform-output"
      ],
      "inputs": [
        "default",
        "{workspaceRoot}/packages/aws-infra/.env"
      ]
    },
    "inference-redeploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "PLATFORM=${PLATFORM:-aws} python scripts/inference_redeploy.py",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "dependsOn": [
        "aws-infra:terraform-output"
      ],
      "inputs": [
        "default",
        "{workspaceRoot}/packages/aws-infra/.env"
      ]
    }
  }
}