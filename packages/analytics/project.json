{
  "name": "analytics",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/analytics",
  "implicitDependencies": ["shared-types", "aws-adapters", "adapters", "aws-infra"],
  "targets": {
    "gather": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python -m stereo_spot_analytics gather --env-file packages/aws-infra/.env",
        "cwd": "{workspaceRoot}"
      },
      "defaultConfiguration": "aws",
      "configurations": {
        "aws": {
          "command": "python -m stereo_spot_analytics gather --env-file packages/aws-infra/.env",
          "cwd": "{workspaceRoot}",
          "env": { "METRICS_ADAPTER": "aws" }
        },
        "gcp": {
          "command": "python -m stereo_spot_analytics gather --env-file packages/gcp-infra/.env",
          "cwd": "{workspaceRoot}",
          "env": { "METRICS_ADAPTER": "gcp" }
        }
      },
      "dependsOn": ["stereo-spot:install-deps", "^terraform-output"],
      "inputs": ["default", "{workspaceRoot}/packages/aws-infra/.env"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ruff check src",
        "cwd": "{projectRoot}"
      },
      "configurations": {},
      "dependsOn": ["stereo-spot:install-deps"]
    }
  }
}
