{
  "name": "media-worker",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/media-worker",
  "implicitDependencies": ["shared-types", "aws-adapters"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f packages/media-worker/Dockerfile -t stereo-spot-media-worker:latest .",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "outputs": []
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": ". packages/aws-infra/.env && docker tag stereo-spot-media-worker:latest \"${ECR_MEDIA_WORKER_URL}:latest\" && docker push \"${ECR_MEDIA_WORKER_URL}:latest\" && aws ecs update-service --cluster \"$ECS_CLUSTER_NAME\" --service media-worker --force-new-deployment --region us-east-1",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "dependsOn": ["aws-infra:terraform-output", "media-worker:build"],
      "inputs": ["default", "{workspaceRoot}/packages/aws-infra/.env"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pytest -v",
        "cwd": "{projectRoot}"
      },
      "configurations": {},
      "dependsOn": ["stereo-spot:install-deps"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ruff check src tests",
        "cwd": "{projectRoot}"
      },
      "configurations": {}
    }
  }
}
