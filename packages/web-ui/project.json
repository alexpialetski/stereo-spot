{
  "name": "web-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/web-ui",
  "implicitDependencies": ["shared-types", "aws-adapters"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f packages/web-ui/Dockerfile -t stereo-spot-web-ui:latest .",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "outputs": [],
      "dependsOn": ["desktop-launcher-setup:build"]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": ". packages/aws-infra/.env && docker tag stereo-spot-web-ui:latest \"${ECR_WEB_UI_URL}:latest\" && docker push \"${ECR_WEB_UI_URL}:latest\" && aws ecs update-service --cluster \"$ECS_CLUSTER_NAME\" --service web-ui --force-new-deployment --region us-east-1",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "dependsOn": ["aws-infra:terraform-output", "web-ui:build"],
      "inputs": ["default", "{workspaceRoot}/packages/aws-infra/.env"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pytest -v",
        "cwd": "{projectRoot}"
      },
      "configurations": {},
      "dependsOn": ["stereo-spot:install-deps"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ruff check src tests",
        "cwd": "{projectRoot}"
      },
      "configurations": {},
      "dependsOn": ["stereo-spot:install-deps"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash packages/web-ui/scripts/serve.sh",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "dependsOn": [
        "aws-infra:terraform-output",
        "desktop-launcher-setup:build",
        "stereo-spot:install-deps"
      ]
    }
  }
}
