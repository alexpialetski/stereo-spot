{
  "name": "stereocrafter-sagemaker",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/stereocrafter-sagemaker",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f packages/stereocrafter-sagemaker/Dockerfile -t stereo-spot-stereocrafter-sagemaker:latest .",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "outputs": []
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": ". packages/aws-infra/.env && docker tag stereo-spot-stereocrafter-sagemaker:latest \"${ECR_STEREOCRAFTER_SAGEMAKER_URL}:latest\" && docker push \"${ECR_STEREOCRAFTER_SAGEMAKER_URL}:latest\"",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "dependsOn": ["aws-infra:terraform-output", "stereocrafter-sagemaker:build"],
      "inputs": ["default", "{workspaceRoot}/packages/aws-infra/.env"]
    }
  }
}
