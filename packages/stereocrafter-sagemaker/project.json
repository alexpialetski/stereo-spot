{
  "name": "stereocrafter-sagemaker",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/stereocrafter-sagemaker",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": ". packages/aws-infra/.env && aws codebuild start-build --project-name \"${CODEBUILD_PROJECT_NAME}\" --region \"${REGION}\"",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "dependsOn": ["aws-infra:terraform-output"],
      "inputs": ["default", "{workspaceRoot}/packages/aws-infra/.env"]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash packages/stereocrafter-sagemaker/scripts/deploy-sagemaker.sh packages/aws-infra/.env",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "dependsOn": ["aws-infra:terraform-output"],
      "inputs": ["default", "{workspaceRoot}/packages/aws-infra/.env"]
    }
  }
}
