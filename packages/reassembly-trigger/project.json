{
  "name": "reassembly-trigger",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/reassembly-trigger",
  "implicitDependencies": ["shared-types"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run shared-types:build && bash packages/reassembly-trigger/scripts/build_deploy_zip.sh",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "outputs": ["{projectRoot}/dist/deploy.zip"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pip install -e ../shared-types -q && pip install -e . -q && pytest -v",
        "cwd": "{projectRoot}"
      },
      "configurations": {}
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ruff check src tests",
        "cwd": "{projectRoot}"
      },
      "configurations": {}
    }
  }
}
