{
  "name": "aws-infra",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/aws-infra",
  "metadata": {
    "nx-terraform": {
      "projectType": "stateful"
    }
  },
  "targets": {
    "terraform-init": {
      "cache": true,
      "metadata": {
        "backendProject": "aws-infra-setup"
      }
    },
    "terraform-plan": {
      "dependsOn": ["terraform-init"]
    },
    "terraform-output": {
      "metadata": {
        "outputFormat": "env",
        "outputFile": ".env"
      }
    },
    "ecr-login": {
      "executor": "nx:run-commands",
      "options": {
        "command": ". packages/aws-infra/.env && REGISTRY=$(echo \"$ECR_WEB_UI_URL\" | cut -d/ -f1) && aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin \"$REGISTRY\"",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "dependsOn": ["aws-infra:terraform-output"],
      "inputs": ["default", "{workspaceRoot}/packages/aws-infra/.env"]
    },
    "update-hf-token": {
      "executor": "nx:run-commands",
      "options": {
        "command": ". packages/aws-infra/.env && aws secretsmanager put-secret-value --secret-id \"$HF_TOKEN_SECRET_ARN\" --secret-string \"$(echo -n \"$HF_TOKEN\" | jq -Rs '{token: .}')\"",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "cache": false,
      "dependsOn": ["aws-infra:terraform-output"],
      "inputs": ["default", "{workspaceRoot}/packages/aws-infra/.env"]
    },
    "update-ytdlp-cookies": {
      "executor": "nx:run-commands",
      "options": {
        "command": ". packages/aws-infra/.env && aws secretsmanager put-secret-value --secret-id \"$YTDLP_COOKIES_SECRET_ARN\" --secret-string \"$(jq -n --rawfile c \"$YTDLP_COOKIES_FILE\" '{cookies_base64: ($c | @base64)}')\"",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {},
      "cache": false,
      "dependsOn": ["aws-infra:terraform-output"],
      "inputs": ["default", "{workspaceRoot}/packages/aws-infra/.env"]
    }
  }
}
