{
  "name": "aws-adapters",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/aws-adapters",
  "implicitDependencies": ["shared-types"],
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
      "command": "pytest -v",
      "cwd": "{projectRoot}"
    },
    "configurations": {},
    "dependsOn": ["stereo-spot:install-deps"]
  },
  "smoke-test": {
    "executor": "nx:run-commands",
    "options": {
"command": "SMOKE_TEST_ENV_FILE=../aws-infra/terraform-outputs.env python scripts/smoke_test.py",
      "cwd": "{projectRoot}"
    },
    "configurations": {},
    "dependsOn": ["stereo-spot:install-deps"]
  },
  "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ruff check src tests",
        "cwd": "{projectRoot}"
      },
      "configurations": {},
      "dependsOn": ["stereo-spot:install-deps"]
    }
  }
}
